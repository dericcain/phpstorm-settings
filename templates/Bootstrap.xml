<templateSet group="Bootstrap">
  <template name="boottext" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$NAME$&quot;&gt;$VALUE$&lt;/label&gt;&#10;    &lt;input type=&quot;text&quot; class=&quot;form-control&quot; id=&quot;$NAME$&quot; name=&quot;$NAME$&quot; placeholder=&quot;$VALUE$&quot;&gt;&#10;&lt;/div&gt;" description="Bootstrap Form Input" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="capitalize(underscoresToSpaces(NAME))" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bootcheck" value="&lt;div class=&quot;form-group&quot;&gt; &#10;    &lt;div class=&quot;checkbox&quot;&gt;&#10;        &lt;label&gt;&#10;            &lt;input type=&quot;checkbox&quot; name=&quot;$VALUE$&quot;&gt;&#10;            $LABEL$&#10;        &lt;/label&gt;&#10;    &lt;/div&gt;&#10;&lt;/div&gt;" description="Bootstrap Checkbox" toReformat="false" toShortenFQNames="true">
    <variable name="VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="LABEL" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bootarea" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$NAME$&quot;&gt;$VALUE$&lt;/label&gt;&#10;    &lt;textarea class=&quot;form-control&quot; rows=&quot;3&quot; name=&quot;$NAME$&quot; id=&quot;$NAME$&quot;&gt;&lt;/textarea&gt;&#10;&lt;/div&gt;" description="Bootstrap textarea" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bootselect" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$NAME$&quot;&gt;$LABEL$&lt;/label&gt;&#10;    &lt;select class=&quot;form-control&quot; id=&quot;$NAME$&quot; name=&quot;$NAME&quot;&gt;&#10;        &lt;option value=&quot;&quot;&gt;-- Please select --&lt;/option&gt;&#10;        &lt;option value=&quot;$VALUE$&quot;&gt;$END$&lt;/option&gt;&#10;    &lt;/select&gt;&#10;&lt;/div&gt;" description="Bootstrap select drop down" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="LABEL" expression="capitalize(underscoresToSpaces(NAME))" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
  <template name="bootsection" value="&lt;section id=&quot;$FIRST$&quot;&gt;&#10;    &lt;div class=&quot;container&quot;&gt;&#10;        &lt;div class=&quot;row&quot;&gt;&#10;            &lt;div class=&quot;$SECOND$&quot;&gt;&#10;                $END$&#10;            &lt;/div&gt;&#10;        &lt;/div&gt;&#10;    &lt;/div&gt;&#10;&lt;/section&gt;" description="Layout for a bootstrap section" toReformat="false" toShortenFQNames="true">
    <variable name="FIRST" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="SECOND" expression="enum(&quot;col-sm-12&quot;,&quot;col-sm-10 col-sm-offset-1&quot;, &quot;col-sm-8 col-sm-offset-2&quot;)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>